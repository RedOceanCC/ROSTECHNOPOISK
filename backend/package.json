{
  "name": "rostechnopolsk-backend",
  "version": "1.0.0",
  "description": "Backend для MVP платформы аренды спецтехники РОСТЕХНОПОИСК",
  "main": "server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node server.js",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "local": "cross-env NODE_ENV=local node server.js",
    "init-db": "node database/init.js",
    "migrate": "node database/migrate.js",
    "migrate:create": "node database/migrate.js create",
    "migrate:status": "node database/migrate.js status",
    "migrate:prod": "cross-env NODE_ENV=production node database/migrate-prod.js",
    "backup": "cross-env NODE_ENV=production node database/migrate-prod.js backup",
    "restore": "cross-env NODE_ENV=production node database/migrate-prod.js restore",
    "db-status": "cross-env NODE_ENV=production node database/migrate-prod.js check"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "node-cron": "^3.0.3",
    "sqlite3": "^5.1.6",
    "supertest": "^7.1.4"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "спецтехника",
    "аренда",
    "аукцион",
    "MVP"
  ],
  "author": "РОСТЕХНОПОИСК",
  "license": "MIT"
}
